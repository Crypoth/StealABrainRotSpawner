local loadingSpinner = Instance.new("Frame")
loadingSpinner.Name = "LoadingSpinner"
loadingSpinner.Size = UDim2.new(0, 50, 0, 50)
loadingSpinner.Position = UDim2.new(0.5, -25, 0.5, -25)
loadingSpinner.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
loadingSpinner.BackgroundTransparency = 0.7
loadingSpinner.BorderSizePixel = 0
loadingSpinner.Parent = loadingOverlay

local spinnerCorner = Instance.new("UICorner")
spinnerCorner.CornerRadius = UDim.new(1, 0)
spinnerCorner.Parent = loadingSpinner

local spinnerStroke = Instance.new("UIStroke")
spinnerStroke.Color = Color3.fromRGB(255, 0, 0)
spinnerStroke.Thickness = 4
spinnerStroke.Parent = loadingSpinner

-- Functions
local function showNotification(message, isSuccess)
    notificationText.Text = message
    if isSuccess then
        notifStroke.Color = Color3.fromRGB(0, 255, 0)
    else
        notifStroke.Color = Color3.fromRGB(255, 0, 0)
    end
    
    notificationFrame.Visible = true
    notificationFrame.Position = UDim2.new(1, 0, 0, 20)
    
    local slideIn = TweenService:Create(
        notificationFrame,
        TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
        {Position = UDim2.new(1, -320, 0, 20)}
    )
    slideIn:Play()
    
    wait(3)
    
    local slideOut = TweenService:Create(
        notificationFrame,
        TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In),
        {Position = UDim2.new(1, 0, 0, 20)}
    )
    slideOut:Play()
    slideOut.Completed:Connect(function()
        notificationFrame.Visible = false
    end)
end

local function showLoading()
    loadingOverlay.Visible = true
    
    -- Spin animation
    local spinTween = TweenService:Create(
        loadingSpinner,
        TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1),
        {Rotation = 360}
    )
    spinTween:Play()
    
    wait(1.5)
    
    spinTween:Cancel()
    loadingOverlay.Visible = false
end

local function copyToClipboard(text)
    if setclipboard then
        setclipboard(text)
        return true
    else
        return false
    end
end

local function copyDiscordLink()
    local discordUrl = "https://discord.gg/UMVSe5XfGC"
    if copyToClipboard(discordUrl) then
        spawn(function()
            showNotification("Discord link copied to clipboard!", true)
        end)
    else
        spawn(function()
            showNotification("Clipboard not supported in this executor", false)
        end)
    end
end

local function copyAllInfo()
    local allInfo = [[SPAWNER IS CURRENTLY DOWN

The script is currently down due to steal a brainrot updating and changing their paths, trax is also down rn..

Estimated time for fix: 3-5 days

Please join our discord for any updates:
https://discord.gg/UMVSe5XfGC

Yours Sincerely,
XwareEXE]]

    if copyToClipboard(allInfo) then
        spawn(function()
            showNotification("All information copied to clipboard!", true)
        end)
    else
        spawn(function()
            showNotification("Clipboard not supported in this executor", false)
        end)
    end
end

local function minimizeWindow()
    spawn(function()
        showLoading()
        
        local minimizeTween = TweenService:Create(
            mainFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In),
            {Position = UDim2.new(0.5, -250, 1, 50)}
        )
        minimizeTween:Play()
        
        minimizeTween.Completed:Connect(function()
            mainFrame.Visible = false
            showNotification("Window minimized", false)
        end)
    end)
end

local function closeWindow()
    spawn(function()
        showLoading()
        
        local closeTween = TweenService:Create(
            mainFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In),
            {Size = UDim2.new(0, 0, 0, 0), Transparency = 1}
        )
        closeTween:Play()
        
        closeTween.Completed:Connect(function()
            screenGui:Destroy()
            showNotification("Script UI closed", false)
        end)
    end)
end

-- Create floating particles
local function createParticles()
    for i = 1, 30 do
        local particle = Instance.new("Frame")
        particle.Name = "Particle" .. i
        particle.Size = UDim2.new(0, 2, 0, 2)
        particle.Position = UDim2.new(math.random(), 0, 1, 10)
        particle.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        particle.BackgroundTransparency = 0.7
        particle.BorderSizePixel = 0
        particle.Parent = particlesFrame
        
        local particleCorner = Instance.new("UICorner")
        particleCorner.CornerRadius = UDim.new(1, 0)
        particleCorner.Parent = particle
        
        -- Animate particle
        spawn(function()
            while particle.Parent do
                local floatTween = TweenService:Create(
                    particle,
                    TweenInfo.new(math.random(4, 8), Enum.EasingStyle.Linear),
                    {Position = UDim2.new(math.random(), 0, -0.1, 0)}
                )
                floatTween:Play()
                floatTween.Completed:Wait()
                particle.Position = UDim2.new(math.random(), 0, 1, 10)
            end
        end)
    end
end

-- Status indicator pulse animation
spawn(function()
    while statusIndicator.Parent do
        local pulseTween = TweenService:Create(
            statusIndicator,
            TweenInfo.new(0.75, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Size = UDim2.new(0, 15, 0, 15), BackgroundTransparency = 0.5}
        )
        pulseTween:Play()
        pulseTween.Completed:Wait()
        
        local pulseTween2 = TweenService:Create(
            statusIndicator,
            TweenInfo.new(0.75, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Size = UDim2.new(0, 12, 0, 12), BackgroundTransparency = 0}
        )
        pulseTween2:Play()
        pulseTween2.Completed:Wait()
    end
end)

-- Glow animation for main frame
spawn(function()
    while mainFrame.Parent do
        local glowTween = TweenService:Create(
            stroke,
            TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Transparency = 0.3}
        )
        glowTween:Play()
        glowTween.Completed:Wait()
        
        local glowTween2 = TweenService:Create(
            stroke,
            TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
            {Transparency = 0}
        )
        glowTween2:Play()
        glowTween2.Completed:Wait()
    end
end)

-- Button hover effects
local function addHoverEffect(button, hoverColor, normalColor)
    button.MouseEnter:Connect(function()
        local hoverTween = TweenService:Create(
            button,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad),
            {BackgroundColor3 = hoverColor, Size = button.Size + UDim2.new(0, 2, 0, 2)}
        )
        hoverTween:Play()
    end)
    
    button.MouseLeave:Connect(function()
        local leaveTween = TweenService:Create(
            button,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad),
            {BackgroundColor3 = normalColor, Size = button.Size - UDim2.new(0, 2, 0, 2)}
        )
        leaveTween:Play()
    end)
end

-- Connect button events
copyDiscordBtn.MouseButton1Click:Connect(copyDiscordLink)
minimizeBtn.MouseButton1Click:Connect(minimizeWindow)
closeBtn.MouseButton1Click:Connect(closeWindow)

-- Add hover effects
addHoverEffect(copyDiscordBtn, Color3.fromRGB(204, 0, 0), Color3.fromRGB(255, 0, 0))
addHoverEffect(minimizeBtn, Color3.fromRGB(255, 200, 50), Color3.fromRGB(255, 170, 0))
addHoverEffect(closeBtn, Color3.fromRGB(204, 0, 0), Color3.fromRGB(255, 0, 0))

-- Initialize
spawn(function()
    showLoading()
    createParticles()
    
    -- Entrance animation
    mainFrame.Size = UDim2.new(0, 0, 0, 0)
    mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    
    local entranceTween = TweenService:Create(
        mainFrame,
        TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
        {Size = UDim2.new(0, 500, 0, 450), Position = UDim2.new(0.5, -250, 0.5, -225)}
    )
    entranceTween:Play()
    
    showNotification("Script Status UI Loaded", true)
end)

-- Draggable window functionality
local dragging = false
local dragStart = nil
local startPos = nil

mainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
    end
end)

mainFrame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

print("Script Status UI loaded successfully!")
print("Discord: https://discord.gg/UMVSe5XfGC")
print("Created by XwareEXE")
